<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssociarCodigo">

    <ImageView
        android:id="@+id/BTN_Voltar_Codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/TXT_DigiteCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DigiteCodigo"
        android:fontFamily="@font/poppins_bold"
        android:theme="@style/Theme.TXT_VEscuro"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/BTN_Voltar_Codigo"
        />

    <LinearLayout
        android:id="@+id/OPT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TXT_DigiteCodigo"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/INP_C1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:imeOptions="actionNext"
            android:textColor="@color/TextMain"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:background="@drawable/custom_input"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:maxLength="1"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />
        <EditText
            android:id="@+id/INP_C2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:imeOptions="actionNext"
            android:textColor="@color/TextMain"
            android:gravity="center"
            android:importantForAutofill="no"
            android:background="@drawable/custom_input"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            tools:ignore="LabelFor"/>
        <EditText
            android:id="@+id/INP_C3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:imeOptions="actionNext"
            android:textColor="@color/TextMain"
            android:background="@drawable/custom_input"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />
        <EditText
            android:id="@+id/INP_C4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textColor="@color/TextMain"
            android:imeOptions="actionNext"
            android:gravity="center"
            android:importantForAutofill="no"
            android:background="@drawable/custom_input"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="220dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />

    </LinearLayout>



    <Button
        android:id="@+id/BTN_Continuar"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/OPT"
        android:background="@drawable/custom_login_button"
        android:text="@string/Continuar"
        android:textColor="@color/white" />
</RelativeLayout>