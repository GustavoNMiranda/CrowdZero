<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/SheetInstituicoesInfo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bottom_sheet_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/AUX_Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="25sp"
        >

        <ImageView
            android:id="@+id/BTN_Voltar_IInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_arrow_m2"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="15sp"

            />

    <TextView
        android:id="@+id/TXT_SheetNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:fontFamily="@font/poppins_bold"
        android:theme="@style/Theme.TXT_VEscuro"
        android:text="Nome"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/TXT_SheetOcupado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:theme="@style/Theme.TXT_VEscuro"
        android:fontFamily="@font/poppins_bold"
        android:layout_below="@+id/AUX_Linear1"
        android:text="@string/Ocupacao"
        />

    <TextView
        android:id="@+id/TXT_CliquePara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TXT_SheetOcupado"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/TXT_MarcadorOcupacao"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/CliquePara"
        android:textSize="14sp"
        android:theme="@style/Theme.TXT_VClaro2" />



    <TextView
        android:id="@+id/TXT_MarcadorOcupacao"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_below="@id/AUX_Linear1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/background_ocupacao_moderada"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Moderada"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/TXT_CliquePara"
        android:layout_marginTop="20dp"
        android:theme="@style/Theme.Separador2"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/TXT_SheetEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:theme="@style/Theme.TXT_VEscuro"
        android:fontFamily="@font/poppins_bold"
        android:layout_below="@+id/view1"
        android:text="@string/Endereco"
        />

    <TextView
        android:id="@+id/TXT_SheetEndereco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="90dp"
        android:theme="@style/Theme.TXT_VClaro2"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@+id/TXT_SheetEndereco"
        android:text="Av.aaaaaa aaaa"
        />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/TXT_SheetEndereco2"
        android:layout_marginTop="20dp"
        android:theme="@style/Theme.Separador2"
        />

    //****************************
    <TextView
        android:id="@+id/TXT_LocaisInternos_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:theme="@style/Theme.TXT_VEscuro"
        android:fontFamily="@font/poppins_bold"
        android:layout_below="@+id/view2"
        android:text="@string/LocaisInternos"
        />

    <TextView
        android:id="@+id/TXT_VoceE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TXT_LocaisInternos_Info"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/BTN_LocaisInternos"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/VoceE"
        android:textSize="14sp"
        android:theme="@style/Theme.TXT_VClaro2" />

    <ImageView
        android:id="@+id/BTN_LocaisInternos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_alignBottom="@id/view4"
        android:layout_alignParentEnd="true"
       android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp"
        android:rotation="180"
        android:src="@drawable/ic_back_arrow_m2" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/TXT_VoceE"
        android:layout_marginTop="20dp"
        android:theme="@style/Theme.Separador2"
        />

    //****************************

    <Button
        android:id="@+id/BTN_Reportar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:background="@drawable/reporte_change_button_reportar"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/Reportar"
        android:textColor="@color/white"
        android:layout_marginStart="30sp"
        android:layout_marginTop="25sp"
        android:layout_marginBottom="20sp"

        />
</RelativeLayout>