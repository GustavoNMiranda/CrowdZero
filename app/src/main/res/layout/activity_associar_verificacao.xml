<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssociarVerificacao">


    <ImageView
        android:id="@+id/BTN_Voltar_Verificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/TXT_VoceEsta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BTN_Voltar_Verificacao"
        android:fontFamily="@font/poppins_bold"
        android:theme="@style/Theme.TXT_VEscuro"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"

        android:layout_marginStart="20sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:text="@string/VoceEsta" />

    <ImageView
        android:id="@+id/IMG_Associar_Instituicao"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="20dp"
        android:background="@drawable/custom_login_button"
        android:src="@drawable/icon_app"
        android:layout_below="@+id/TXT_VoceEsta"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:id="@+id/TXT_AssociarNomeInstituicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="23dp"
        android:theme="@style/Theme.TXT_VEscuro"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/IMG_Associar_Instituicao"
        android:text="Nome" />



    <TextView
        android:id="@+id/TXT_Associados"
        android:layout_below="@+id/TXT_AssociarNomeInstituicao"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:layout_marginStart="20sp"
        android:theme="@style/Theme.TXT_VEscuro"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Associados" />

    <TextView
        android:id="@+id/TXT_NAssociados"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_below="@+id/TXT_AssociarNomeInstituicao"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:background="@drawable/custom_login_button"
        android:text="100" />

    <TextView
        android:id="@+id/TXT_NEspacos"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_below="@+id/view1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/custom_login_button"
        android:gravity="center"
        android:text="100"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textAlignment="center" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_below="@+id/TXT_NumeroUsuarios"
        android:layout_marginTop="10dp"
        android:theme="@style/Theme.Separador"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/TXT_NumeroUsuarios"
        android:layout_below="@+id/TXT_Associados"
        android:fontFamily="@font/poppins_medium"
        android:theme="@style/Theme.TXT_VClaro"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="10sp"
        android:layout_toStartOf="@+id/TXT_NAssociados"
        android:textSize="11sp"
        android:textAlignment="textStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NumeroDeusuÃ¡rios" />

    <TextView
        android:id="@+id/TXT_Espacos"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:layout_marginStart="20sp"
        android:theme="@style/Theme.TXT_VEscuro"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Espacos" />

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_below="@+id/Quantidade"
        android:layout_marginTop="10dp"
        android:theme="@style/Theme.Separador"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/Quantidade"
        android:fontFamily="@font/poppins_medium"
        android:theme="@style/Theme.TXT_VClaro"
        android:textSize="11sp"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart"
        android:layout_toStartOf="@+id/TXT_NEspacos"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/TXT_Espacos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/QuantidaDedeespacos" />

    <TextView
        android:id="@+id/TXT_Enderecos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:layout_marginStart="20sp"
        android:theme="@style/Theme.TXT_VEscuro"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/view4"
        android:text="@string/Endereco" />

    <TextView
        android:id="@+id/TXT_Enderecos2"
        android:fontFamily="@font/poppins_medium"
        android:theme="@style/Theme.TXT_VClaro"
        android:layout_marginStart="20sp"
        android:textSize="11sp"
        android:layout_below="@+id/TXT_Enderecos"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Av. aaaa aaaa aaaaa" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_below="@+id/TXT_Enderecos2"
        android:layout_marginTop="10dp"
        android:theme="@style/Theme.Separador"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/TXT_Telefone"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15sp"
        android:layout_marginStart="20sp"
        android:theme="@style/Theme.TXT_VEscuro"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_height="wrap_content"
        android:text="@string/Telefone" />

    <TextView
        android:id="@+id/TXT_NumTelefone"
        android:fontFamily="@font/poppins_medium"
        android:theme="@style/Theme.TXT_VClaro"
        android:layout_marginStart="20sp"
        android:textSize="11sp"
        android:layout_below="@+id/TXT_Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="222 111 222" />

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_below="@+id/TXT_NumTelefone"
        android:layout_marginTop="10dp"
        android:theme="@style/Theme.Separador"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/BTN_Confirmar_Associar"
        android:layout_width="141dp"
        android:layout_height="36dp"
        android:layout_below="@+id/view3"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/custom_login_button"
        android:text="@string/Confirmar"
        android:layout_marginStart="20dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/BTN_Tentar"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/view3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20sp"
        android:layout_marginEnd="20dp"
        android:background="@color/Trasparente"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/TentarNovamente"
        android:theme="@style/Theme.TXT_VEscuro" />

</RelativeLayout>
</ScrollView>